// Ø­Ø°Ù Ø³ØªÙˆÙ† Ú©Ù…Ø³ÛŒÙˆÙ† Ø§Ø² Ø¬Ø¯ÙˆÙ„ Ø³ÙØ§Ø±Ø´Ø§Øª ÙˆÙˆÚ©Ø§Ù…Ø±Ø³ (Ú©Ù„ÛŒØ¯Ù‡Ø§ÛŒ Ø±Ø§ÛŒØ¬ Ú©Ù…Ø³ÛŒÙˆÙ†)
add_filter('manage_edit-shop_order_columns', function($columns) {
    // Ú©Ù„ÛŒØ¯Ù‡Ø§ÛŒ Ø§Ø­ØªÙ…Ø§Ù„ÛŒ Ø³ØªÙˆÙ† Ú©Ù…Ø³ÛŒÙˆÙ†ØŒ Ø§Ú¯Ø± Ú©Ù…Ø³ÛŒÙˆÙ† Ø¯Ø§Ø±ÛŒØ¯ Ø¨Ø§ Ú©Ù„ÛŒØ¯ Ù…Ù†Ø§Ø³Ø¨ Ø¬Ø§ÛŒÚ¯Ø²ÛŒÙ† Ú©Ù†ÛŒØ¯
    $commission_keys = ['commission', 'wcmp_commission', 'dokan_commission', 'commission_fee'];

    foreach ($commission_keys as $key) {
        if (isset($columns[$key])) {
            unset($columns[$key]);
        }
    }

    // Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† Ø³ØªÙˆÙ† Ù†Ø§Ù… ÙØ±ÙˆØ´Ú¯Ø§Ù‡ Ø¨Ø¹Ø¯ Ø§Ø² Ø´Ù…Ø§Ø±Ù‡ Ø³ÙØ§Ø±Ø´
    $new_columns = [];
    foreach ($columns as $key => $column) {
        $new_columns[$key] = $column;
        if ($key === 'order_number') {
            $new_columns['dokan_store_name'] = 'Ù†Ø§Ù… ÙØ±ÙˆØ´Ú¯Ø§Ù‡';
        }
    }
    return $new_columns;
}, 100);

// Ù…Ù‚Ø¯Ø§Ø±Ø¯Ù‡ÛŒ Ø¨Ù‡ Ø³ØªÙˆÙ† Ù†Ø§Ù… ÙØ±ÙˆØ´Ú¯Ø§Ù‡ Ø¯Ø± Ø¬Ø¯ÙˆÙ„ Ø³ÙØ§Ø±Ø´Ø§Øª
add_action('manage_shop_order_posts_custom_column', function($column) {
    global $post;

    if ($column === 'dokan_store_name') {
        $order = wc_get_order($post->ID);
        $store_names = [];

        foreach ($order->get_items() as $item) {
            $product_id = $item->get_product_id();
            $author_id = get_post_field('post_author', $product_id);
            $store_name = get_user_meta($author_id, 'dokan_store_name', true);
            if ($store_name && !in_array($store_name, $store_names)) {
                $store_names[] = $store_name;
            }
        }

        if (!empty($store_names)) {
            echo implode(', ', array_map('esc_html', $store_names));
        } else {
            echo 'â€”';
        }
    }
});

