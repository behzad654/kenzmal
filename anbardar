// AJAX: Ø¨Ø§Ø±Ú¯Ø°Ø§Ø±ÛŒ Ú¯Ø²Ø§Ø±Ø´ Ø³ÙØ§Ø±Ø´Ø§Øª
add_action('wp_ajax_load_order_report', function () {
    if (!current_user_can('read')) {
        wp_die('Ø¯Ø³ØªØ±Ø³ÛŒ ØºÛŒØ±Ù…Ø¬Ø§Ø²');
    }

    $input_store = isset($_GET['dokan_store_name']) ? sanitize_text_field($_GET['dokan_store_name']) : '';
    $input_store = trim($input_store);

    $args = [
        'status' => 'processing',
        'limit' => 20,
        'orderby' => 'date',
        'order' => 'DESC'
    ];

    $orders = wc_get_orders($args);

    echo '<table role="table" aria-label="Ú¯Ø²Ø§Ø±Ø´ Ø³ÙØ§Ø±Ø´Ø§Øª"><thead><tr><th scope="col">Ø´Ù…Ø§Ø±Ù‡ Ø³ÙØ§Ø±Ø´</th><th scope="col">Ù†Ø§Ù… Ù…Ø­ØµÙˆÙ„</th><th scope="col">Ù†Ø§Ù… ÙØ±ÙˆØ´Ú¯Ø§Ù‡</th><th scope="col">Ù†Ø§Ù… Ø®Ø±ÛŒØ¯Ø§Ø±</th><th scope="col">ØªØ§Ø±ÛŒØ®</th><th scope="col">ØªØ­ÙˆÛŒÙ„ Ø´Ø¯</th></tr></thead><tbody>';

    foreach ($orders as $order) {
        foreach ($order->get_items() as $item) {
            $product_name = $item->get_name();
            $product_id = $item->get_product_id();
            $author_id = get_post_field('post_author', $product_id);
            $store_name = get_user_meta($author_id, 'dokan_store_name', true) ?: '---';

            if ($input_store !== '') {
                if (mb_strtolower($store_name) !== mb_strtolower($input_store)) {
                    continue;
                }
            }

            $customer_name = $order->get_billing_first_name() . ' ' . $order->get_billing_last_name();
            $order_date = $order->get_date_created()->date_i18n('Y/m/d H:i');

            echo '<tr>';
            echo '<td>' . esc_html($order->get_id()) . '</td>';
            echo '<td>' . esc_html($product_name) . '</td>';
            echo '<td>' . esc_html($store_name) . '</td>';
            echo '<td>' . esc_html($customer_name) . '</td>';
            echo '<td>' . esc_html($order_date) . '</td>';
            echo '<td class="checkbox-cell"><input type="checkbox" aria-label="ØªØ­ÙˆÛŒÙ„ Ø´Ø¯" /></td>';
            echo '</tr>';
        }
    }

    echo '</tbody></table>';
    wp_die();
});

// AJAX: Ø¨Ø±Ø±Ø³ÛŒ Ø³ÙØ§Ø±Ø´ Ø¬Ø¯ÛŒØ¯
add_action('wp_ajax_check_new_orders', function () {
    $args = [
        'status' => 'processing',
        'limit' => 1,
        'orderby' => 'date',
        'order' => 'DESC'
    ];

    $orders = wc_get_orders($args);
    $latest = $orders ? $orders[0] : null;

    wp_send_json([
        'new_order' => $latest !== null,
        'latest_id' => $latest ? $latest->get_id() : 0
    ]);
});
